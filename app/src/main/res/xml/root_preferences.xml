<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/environment_header">
        <DropDownPreference
            app:defaultValue="24"
            app:entries="@array/time_entries"
            app:entryValues="@array/time_values"
            app:key="hours_mode"
            app:title="@string/time_title"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/alarm_header">

        <SwitchPreferenceCompat
            app:key="vibration"
            app:title="@string/vibration_title"
            app:defaultValue="true"/>
    </PreferenceCategory>

</PreferenceScreen>